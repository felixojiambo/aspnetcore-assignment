@model Queue_Management_System.Models.CheckinModel

<h2>Check-In</h2>

<form asp-action="SubmitCheckin" method="post">
    <div class="form-group">
        <label for="serviceType">Select Service:</label>
        <select asp-for="SelectedServiceId" asp-items="@(new SelectList(Model.AvailableServices, "Id", "Name"))" class="form-control">
            <option value="">Select a service</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
